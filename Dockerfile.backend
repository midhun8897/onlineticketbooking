# Build with Maven and JDK 21
FROM maven:3.9.6-eclipse-temurin-21 AS build

WORKDIR /app

COPY OnlineTicketBookingBackend/pom.xml .
COPY OnlineTicketBookingBackend/.mvn .mvn
COPY OnlineTicketBookingBackend/mvnw .
COPY OnlineTicketBookingBackend/src src

RUN ./mvnw clean package -DskipTests

# Run with Java runtime
FROM eclipse-temurin:21-jre

WORKDIR /app

COPY --from=build /app/target/*.jar app.jar

EXPOSE 8080

ENTRYPOINT ["java", "-jar", "app.jar"]